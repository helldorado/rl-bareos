<% unless @environ.empty? -%>
<%   @environ.each do |var| -%>
export <%= var %>
<%   end -%>
<% end -%>
BACKUPDIR="<%= @_backup_dir %>"
<% if @compress_program != '' -%>
GZIP="<%= @compress_program %>"
<% end -%>
KEEPBACKUP="<%= @keep_backup %>"
<% if @my_cnf != '' -%>
MYCNF="<%= @my_cnf %>"
<% end -%>
LOG_METHOD="<%= @log_method %>"
SYSLOG_FACILITY="<%= @syslog_facility %>"
<% unless @skip_databases.empty? -%>
SKIP="$SKIP <%= @skip_databases.join(" ") %>"
<% end -%>
<% if @server != '' -%>
DBSERVER="<%= @server %>"
<% end -%>
<% if @initscript != '' -%>
INITSCRIPT="<%= @initscript %>"
<% end -%>
<% if @servicename != '' -%>
SERVICENAME="<%= @servicename %>"
<% end -%>
<% if @dumpoptions != '' -%>
DUMPOPTIONS="$DUMPOPTIONS <%= @dumpoptions %>"
<% end -%>
