<% if @params.include? 'environment' -%>
<%   [@params['environment']].flatten.each do |var| -%>
export <%= var %>
<%   end -%>
<% end -%>
<% if @params.include? 'backupdir' -%>
BACKUPDIR="<%= @params['backupdir'] %>"
<% end -%>
<% if @params.include? 'keep_backup' -%>
KEEPBACKUP="<%= @params['keep_backup'] %>"
<% end -%>
<% if @params.include? 'log_method' -%>
LOG_METHOD="<%= @params['log_method'] %>"
<% end -%>
<% if @params.include? 'skip_databases' -%>
SKIP="$SKIP <%= [@params['skip_databases']].flatten.join(" ") %>"
<% end -%>
<% if @params.include? 'server' -%>
DBSERVER="<%= @params['server'] %>"
<% end -%>
<% if @params.include? 'initscript' -%>
INITSCRIPT="<%= @params['initscript'] %>"
<% end -%>
<% if @params.include? 'cluster' -%>
CLUSTER="<%= @params['cluster'] %>"
<% end -%>
